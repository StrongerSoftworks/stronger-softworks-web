@page "/"
@using StrongerSoftworks.Web.Models

@inject IDomainProvider DomainProvider;

<PageTitle>Home</PageTitle>

@{
    var domain = DomainProvider.Domain;
    var graph = OpenGraph.MakeGraph(
        title: "Stronger Softworks - Web Development and SEO", 
        type: "website", 
        image: domain + "/bundle/img/about-720.png", 
        url: domain, 
        description: "My Description", 
        siteName: "Stronger Softworks");

    var websiteSchema = new WebSite()
    {
        AlternateName = "Stronger Softworks - Web Development and SEO",
        Name = "Stronger Softworks",
        Url = DomainProvider.DomainUri,
    };
}

<HeadContent>
    @((MarkupString)graph.ToString())

    <script type="application/ld+json">
        @((MarkupString)websiteSchema.ToString())
    </script>
</HeadContent>

<HeroSection HeroData="@HeroData" />
<AboutSection AboutData="@AboutData" />
@* <StatsSection StatsData="@StatsData" /> *@
<ServicesSection ServicesData="@ServicesData" />
<FeaturesSection FeaturesData="@FeaturesData" />
