@page "/"

@inject IDomainProvider DomainProvider;

<PageTitle>Home</PageTitle>

@{
    var domain = DomainProvider.Domain;
    var graph = OpenGraph.MakeGraph(
        title: "Stronger Softworks - Web Development and SEO", 
        type: "website", 
        image: domain + "/bundle/img/about-720.png", 
        url: domain, 
        description: "My Description", 
        siteName: "Stronger Softworks");
}

<HeadContent>
    @((MarkupString)graph.ToString())
</HeadContent>

<HeroSection HeroData="@HeroData" />
