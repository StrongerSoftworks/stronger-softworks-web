@page "/"
@using Sidio.Sitemap.Core
@attribute [Sitemap("/")]

@inject IBaseUrlProvider BaseUrlProvider;

<PageTitle>Stronger Softworks: Web Marketing and Search Engine Optimization</PageTitle>

@{
    var baseUrl = BaseUrlProvider.BaseUrl.GetComponents(UriComponents.SchemeAndServer, UriFormat.UriEscaped);
    
    // Open Graph
    var graph = OpenGraph.MakeGraph(
        title: "Stronger Softworks - Web Development and SEO", 
        type: "website", 
        image: baseUrl + "/bundle/img/stronger-softworks-480.avif",
        url: baseUrl, 
        description: "Let Us Help You Grow Your Business", 
        siteName: "Stronger Softworks");


    // Structured Data
    var websiteSchema = new WebSite()
    {
        AlternateName = "Stronger Softworks - Web Development and SEO",
        Name = "Stronger Softworks",
        Url = BaseUrlProvider.BaseUrl,
    };
}

<HeadContent>
    <meta name="ahrefs-site-verification" content="71a46252f9fdc9ff075435b41f50adf911cffd8d010f61179f0c74fb69e411ff">

    @((MarkupString)graph.ToString())

    <script type="application/ld+json">
        @((MarkupString)websiteSchema.ToString())
    </script>
</HeadContent>

<HeroSection HeroData="@HeroData" />
<AboutSection AboutData="@AboutData" />
