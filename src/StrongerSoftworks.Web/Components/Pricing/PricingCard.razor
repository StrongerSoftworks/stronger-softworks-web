<div class="card mb-4 rounded-3 shadow-sm">
    <div class="card-header py-3">
        <h4 class="my-0 fw-normal">@Name</h4>
    </div>
    <div class="card-body">
        <h1 class="card-title pricing-card-title">$@Price<small class="text-body-secondary fw-light">/@Duration</small>
        </h1>
        <ul class="list-unstyled mt-3 mb-4">
            @foreach (var inclusion in Inclusions)
            {
                <li>@inclusion</li>
            }
        </ul>
        <button type="button" class="w-100 btn btn-lg btn-outline-primary">@CTA</button>
    </div>
</div>


@code {
    [Parameter, EditorRequired]
    public string Name { get; set; }

    [Parameter, EditorRequired]
    public float Price { get; set; }

    [Parameter, EditorRequired]
    public string Duration { get; set; }

    [Parameter, EditorRequired]
    public string CTA { get; set; }

    [Parameter, EditorRequired]
    public List<string> Inclusions { get; set; }


}