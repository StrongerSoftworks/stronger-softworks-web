<div class="row row-cols-1 row-cols-md-3 mb-3 text-center">

    @foreach(var package in Packages) {
    <div class="col">
        <PricingCard PricePackage="package" />
    </div>
    }
</div>

<h2 class="display-6 text-center mb-4">Ad Ons</h2>

<div class="row">
    <div class="col">
        @foreach(var addOn in AddOns) {
            <div class="row">
                <h5>@addOn.Name</h5>
                @if(addOn.Description != null) {
                    <h6><small>@addOn.Description</small></h6>
                }
                @if(addOn.Price != 0f) {
                    <h5 class="card-title pricing-card-title">
                        $@addOn.Price
                    </h5>
                }
                @if(addOn.RecurringPrice != 0f)
                {
                    <h6>
                        $@addOn.RecurringPrice<small class="text-body-secondary fw-light">/@addOn.Frequency</small>
                    </h6>
                }
            </div>
        }
    </div>
</div>

