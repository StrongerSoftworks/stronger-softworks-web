@using StrongerSoftworks.Models
@using StrongerSoftworks.Components.Common

@code {
    [Parameter] public AboutSectionModel AboutData { get; set; }

    private PhotoSize[] aboutImageSizes = [
        new PhotoSize() { Breakpoint = 992, Width = 480 },
        new PhotoSize() { Breakpoint = 1200, Width = 360 },
    ];
}

<section id="@(AboutData.Id ?? "about")" class="about section">
    <div class="container">
        <div class="row gy-4">
            <div class="content">
                <h2>@AboutData.Header</h2>
                <p class="fst-italic">@AboutData.Paragraph</p>
                <ul>
                    @foreach (var item in AboutData.ListItems)
                    {
                        <li><i class="bi bi-check-circle"></i> <span>@item</span></li>
                    }
                </ul>
                @if (AboutData.ButtonLink != null)
                {
                    <a href="@AboutData.ButtonLink" class="read-more">
                        <span>@AboutData.ButtonText</span>
                        <i class="bi bi-arrow-right"></i>
                    </a>
                }
            </div>

            @* <div class="col-lg-6 order-2 order-lg-2 d-flex flex-column flex-lg-row align-items-center">
                <Picture ImageUrl="@AboutData.ImageUrl" AltText="@AboutData.ImageAltText" Width="480"
                    Sizes="aboutImageSizes" />
            </div> *@
        </div>
    </div>
</section>
